#include <stdio.h>

int main() {
    char str[1000];
    int freq[26] = {0};
    int i = 0;

    printf("Enter a string: ");
    scanf("%[^\n]", str);

    while (str[i] != '\0') {
        char c = str[i];

        if (c >= 'a' && c <= 'z') {
            freq[c - 'a']++;
            if (freq[c - 'a'] == 2) {
                printf("First repeating lowercase alphabet: %c\n", c);
                return 0;
            }
        }
        i++;
    }

    printf("No repeating lowercase alphabet found\n");
    return 0;
}
