#include <stdio.h>

int main() {
    char str[1000];
    char word[1000], longest[1000];
    int i = 0, w = 0, maxLen = 0, len = 0;

    printf("Enter a sentence: ");
    scanf("%[^\n]", str);

    while (1) {
        if (str[i] != ' ' && str[i] != '\0') {
            word[w++] = str[i];
            len++;
        } else {
            word[w] = '\0';
            if (len > maxLen) {
                maxLen = len;
                int k = 0;
                while (word[k] != '\0') {
                    longest[k] = word[k];
                    k++;
                }
                longest[k] = '\0';
            }
            w = 0;
            len = 0;
        }
        if (str[i] == '\0')
            break;
        i++;
    }

    printf("Longest word: %s\n", longest);

    return 0;
}
