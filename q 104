#include <stdio.h>

int main() {
    int n;
    printf("Enter a positive integer n: ");
    scanf("%d", &n);

    int total = n * (n + 1) / 2;  // sum of 1 to n

    for (int x = 1; x <= n; x++) {
        int leftSum = x * (x + 1) / 2;
        int rightSum = total - (x - 1) * x / 2;
        if (leftSum == rightSum) {
            printf("Pivot integer: %d", x);
            return 0;
        }
    }

    printf("Pivot integer: -1");
    return 0;
}
