#include <stdio.h>
#include <ctype.h>

int main() {
    char s[200];

    printf("Enter a string: ");
    fgets(s, sizeof(s), stdin);

    for(int i = 0; s[i]; i++) {
        if(i == 0 || s[i-1] == ' ')
            s[i] = toupper(s[i]);
        else
            s[i] = tolower(s[i]);
    }

    printf("Output: %s", s);
    return 0;
}
