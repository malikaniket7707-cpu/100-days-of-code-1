#include <stdio.h>

int main() {
    FILE *fp = fopen("info.txt", "w");
    if (fp == NULL) {
        printf("Ran into some error!");
        return 0;
    }

    char name[21];
    int age;
    printf("Enter your first name: ");
    scanf("%s", name);
    printf("Enter your age: ");
    scanf("%d", &age);

    fprintf(fp, "Name: %s Age: %d\n", name, age);
    fclose(fp);
    printf("File created successfully! Data written to info.txt");
    return 0;
}
