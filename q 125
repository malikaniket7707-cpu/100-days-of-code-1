#include <stdio.h>

int main () {
    FILE *fp = fopen("data.txt", "a");

    if (fp == NULL) {
        printf("Unable to open file!!");
        return 1;
    }
    char str[100];
    printf("Enter into file: ");
    fgets(str, sizeof(str), stdin);
    if (str[0] == '\n') fprintf(fp, "%s", str);
    else fprintf(fp, "\n%s", str);

    fclose(fp);
    return 0;
}
