#include <stdio.h>
#include <math.h>

int main() {
    int n, original, digits = 0, temp;
    long long result = 0;

    printf("Enter a number: ");
    scanf("%d", &n);

    original = n;
    temp = n;

    while (temp != 0) {
        temp /= 10;
        digits++;
    }

    temp = n;

    while (temp != 0) {
        int remainder = temp % 10;
        result += pow(remainder, digits);
        temp /= 10;
    }

    if (result == original)
        printf("%d is an Armstrong number.\n", original);
    else
        printf("%d is not an Armstrong number.\n", original);

    return 0;
}
