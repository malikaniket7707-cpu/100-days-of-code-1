#include <stdio.h>

int main() {
    int n1, n2;

    printf("Enter size of first array: ");
    scanf("%d", &n1);

    int a[n1];
    for (int i = 0; i < n1; i++) {
        printf("Enter element %d of A: ", i + 1);
        scanf("%d", &a[i]);
    }

    printf("Enter size of second array: ");
    scanf("%d", &n2);

    int b[n2];
    for (int i = 0; i < n2; i++) {
        printf("Enter element %d of B: ", i + 1);
        scanf("%d", &b[i]);
    }

    int c[n1 + n2];

    for (int i = 0; i < n1; i++)
        c[i] = a[i];

    for (int i = 0; i < n2; i++)
        c[n1 + i] = b[i];

    printf("\nMerged array: ");
    for (int i = 0; i < n1 + n2; i++)
        printf("%d ", c[i]);

    return 0;
}
