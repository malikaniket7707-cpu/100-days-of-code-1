#include <stdio.h>

int main() {
    int r, c;
    printf("Enter number of rows: ");
    scanf("%d", &r);

    printf("Enter number of columns: ");
    scanf("%d", &c);

    int a[r][c];
    int rowSum[r];

    // Input matrix element-by-element
    printf("\nEnter matrix elements:\n");
    for(int i = 0; i < r; i++) {
        for(int j = 0; j < c; j++) {
            printf("Enter element at position [%d][%d]: ", i, j);
            scanf("%d", &a[i][j]);
        }
    }

    // Calculate sum of each row
    for(int i = 0; i < r; i++) {
        rowSum[i] = 0;
        for(int j = 0; j < c; j++) {
            rowSum[i] += a[i][j];
        }
    }

    // Print matrix
    printf("\nMatrix:\n");
    for(int i = 0; i < r; i++) {
        for(int j = 0; j < c; j++) {
            printf("%d ", a[i][j]);
        }
        printf("\n");
    }

    // Print row sums
    printf("\nSum of each row:\n");
    for(int i = 0; i < r; i++) {
        printf("Row %d sum = %d\n", i, rowSum[i]);
    }

    return 0;
}
