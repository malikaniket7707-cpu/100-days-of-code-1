#include <stdio.h>

int main() {
    char str[1000];
    int i = 0;
    char ch;

    printf("Enter a string: ");
    while ((ch = getchar()) != '\n' && ch != EOF) {
        str[i++] = ch;
    }
    str[i] = '\0';

    i = 0;
    while (str[i] != '\0') {
        if (str[i] >= 'a' && str[i] <= 'z') {
            str[i] = str[i] - ('a' - 'A');
        }
        i++;
    }

    printf("Uppercase string: %s\n", str);

    return 0;
}
