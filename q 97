#include <stdio.h>

int main() {
    char str[1000];

    printf("Enter a name: ");
    scanf("%[^\n]", str);

    if (str[0] != ' ')
        printf("%c", str[0]);

    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] == ' ' && str[i + 1] != '\0' && str[i + 1] != ' ') {
            printf("%c", str[i + 1]);
        }
    }

    printf("\n");

    return 0;
}
